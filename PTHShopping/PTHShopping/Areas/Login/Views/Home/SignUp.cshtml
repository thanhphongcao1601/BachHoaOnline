@model PTHShopping.Models.KhachHang
@{
        ViewData["Title"] = "SignUp";
        Layout = "~/Areas/Login/Views/Shared/_LoginLayout.cshtml";
    }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RegistrationForm_v1 by Colorlib</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- MATERIAL DESIGN ICONIC FONT -->
    <link rel="stylesheet" href="~/SignUpassets/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css">

    <!-- STYLE CSS -->
    <link rel="stylesheet" href="~/SignUpassets/css/style.css">
    <style>
        *:not(i) {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
    }
    </style>
</head>

<body>

    <div class="wrapper" style="background-image: url('https://www.cslbc.com/wp-content/uploads/2016/02/montreal-city-scape-background.jpg') ">
        <div class="inner">
            <div class="image-holder">
                <img src="https://cf.shopee.vn/file/1c7e50cb841be71947a49d07333c11cd" alt="" style="height:100%">
            </div>
            <form method="POST" asp-action="SignUp">
                <h3>Đăng ký tài khoản</h3>

                <div class="form-wrapper">
                    <input name="HoTen" type="text" placeholder="Họ tên *" class="form-control" value="@ViewBag.ten">
                </div>
                @if (ViewBag.name != null)
                {
                    <div class="text-danger">Họ tên chưa được điền</div>
                }

                <div class="form-wrapper">
                    <input type="text" name="Sdt" placeholder="Số điện thoại *" class="form-control" id="sdt" value="@ViewBag.phone" maxlength="11">
                    <i class="zmdi zmdi-phone"></i>
                </div>
                @if (ViewBag.sdtTrung != null)
                {
                    <div class="text-danger">Số điện thoại đã được sử dụng</div>
                }
                @if (ViewBag.sdt != null)
                {
                    <div class="text-danger">Số điện thoại chưa được điền</div>
                }
                <div class="form-wrapper">
                    <input name="mail" type="text" placeholder="Email" class="form-control" value="@ViewBag.mail">
                    <i class="zmdi zmdi-email"></i>
                </div>
                <div class="form-wrapper">
                    <select name="gioitinh" id="" class="form-control" value="@ViewBag.gioitinh">
                        <option value="" disabled selected>Giới tính</option>
                        <option value="1">Nam</option>
                        <option value="0">Nữ</option>

                    </select>
                    <i class="zmdi zmdi-caret-down" style="font-size: 17px"></i>
                </div>
                <div class="form-wrapper">
                    <input name="pass1" type="password" placeholder="Mật khẩu *" class="form-control" id="pass1">
                    <i class="zmdi zmdi-lock"></i>
                </div>
                <div class="form-wrapper">
                    <input name="pass2" type="password" placeholder="Nhập lại mật khẩu *" class="form-control" id="pass2">
                    <i class="zmdi zmdi-lock"></i>
                </div>
                @if (ViewBag.passN != null)
                {
                    <div class="text-danger">Mật khẩu chưa được điền</div>
                }
                @if (ViewBag.pass != null)
                {
                    <div class="text-danger">Nhập lại mật khẩu chưa đúng</div>
                }

                <button id="click">
                    Register
                    <i class="zmdi zmdi-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
