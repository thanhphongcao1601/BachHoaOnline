@model PTHShopping.Models.Role
@using PTHShopping.Helper
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h5 class="text-info">Thêm quyền truy cập</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label">ID quyền truy cập</label>
                <input asp-for="RoleId" class="form-control" value="@RandomID.generateID()"/>
                <span asp-validation-for="RoleId" class="text-danger"></span>
                @if (ViewBag.nullID != null)
                {
                    <div class="text-danger">ID không được trống</div>
                }
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label">Tên quyền</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
                @if (ViewBag.nullName != null)
                {
                    <div class="text-danger">Tên không được trống</div>
                }
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label">Mô tả</label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=" Tạo " class="btn-gradient-primary btn-rounded btn-sm btn">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&lt; Trở lại</a>
</div>

