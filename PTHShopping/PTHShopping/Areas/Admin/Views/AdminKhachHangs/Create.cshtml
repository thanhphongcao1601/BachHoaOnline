@model PTHShopping.Models.KhachHang
@using PTHShopping.Helper
@{
    var ID = ViewBag.TrungID;
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h5 class="text-info">Thêm khách hàng mới</h5>
<hr />
<div class="row d-flex">
    <div class="col-md-12">
        <form asp-action="Create" class="d-flex flex-wrap">
            <div class="col-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdkhachHang" class="control-label" id="l">ID Khách hàng</label>
                    <input asp-for="IdkhachHang" class="form-control" id="idkh" value="@RandomID.generateID()" />
                    @if (ID != null)
                    {
                        <span class="text-danger">@ID đã tồn tại hãy nhập ID khác </span>
                    }
                    @if (ViewBag.nullID != null)
                    {
                        <span class="text-danger">ID không được trống </span>
                    }
                    <span asp-validation-for="IdkhachHang" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoTen" class="control-label">Họ tên</label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                    @if (ViewBag.nullHT != null)
                    {
                        <span class="text-danger">Họ tên không được trống </span>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="SinhNhat" class="control-label">Sinh nhật</label>
                    <input asp-for="SinhNhat" class="form-control" />
                    <span asp-validation-for="SinhNhat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdt" class="control-label">Số điện thoại</label>
                    <input asp-for="Sdt" class="form-control" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                    @if (ViewBag.nullSDT != null)
                    {
                        <span class="text-danger">Số điện thoại không được trống </span>
                    }
                    @if (ViewBag.sdtTrung != null)
                    {
                        <span class="text-danger">@ViewBag.sdtTrung đã được sử dụng</span>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                    <input asp-for="MatKhau" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                    @if (ViewBag.nullPass != null)
                    {
                        <span class="text-danger">Mật khẩu không được trống </span>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Salt" class="control-label"></label>
                    <input asp-for="Salt" class="form-control" readonly value="@BCrypt.Net.BCrypt.GenerateSalt(12)" />
                    <span asp-validation-for="Salt" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <input type="submit" value=" Tạo " class="btn-gradient-primary btn-rounded btn-sm btn">
                </div>
            </div>
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&lt; Trở về</a>
</div>
