@model PTHShopping.Models.Category
@using PTHShopping.Helper

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <script type="text/javascript">
        var a = document.getElementById("thumd");
        function readURL(input) {
            if (input.files) {
                var reader = new FileReader();
                reader.readAsDataURL(input.files[0]);
                reader.onload = (e) => {
                    a.src = e.target.result;
                }
            }
        }
    </script>
}

<style>
    .avt {
        width: 250px;
        height: 250px;
    }
</style>
<h5 class="text-info">Thêm danh mục sản phẩm mới</h5>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" class="d-flex" enctype="multipart/form-data">
            <div class="col-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CatId" class="control-label">Mã danh mục</label>
                    <input asp-for="CatId" class="form-control" value="@RandomID.generateID()" />
                    <span asp-validation-for="CatId" class="text-danger"></span>
                    @if (ViewBag.TrungID!=null)
                    {
                        <div class="text-danger">@ViewBag.TrungID bị trùng, đã tạo lại  ID khác</div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="CatName" class="control-label">Tên danh mục</label>
                    <input asp-for="CatName" class="form-control" />
                    <span asp-validation-for="CatName" class="text-danger"></span>
                    @if (ViewBag.nullName != null)
                    {
                        <div class="text-danger">Tên danh mục không được trống</div>
                    }
                </div>
               
                <div class="form-group">
                    <label class="control-label">Ảnh đại diện danh mục</label>
                    <br />
                    <input id="file" type="file" name="file" onchange="readURL(this);" hidden />
                    <label class="btn btn-primary mt-1" for="file">Chọn ảnh</label>
                    <span asp-validation-for="Thumb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img class="avt ml-3" id="thumd" src="https://via.placeholder.com/1" />
                </div>
            </div>
            <div class="col-5">
                <div class="form-group">
                    <label asp-for="Published" class="control-label"></label>
                    <select asp-for="Published" class="form-control">
                        <option>true</option>
                        <option>false</option>
                    </select>
                    <span asp-validation-for="Published" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="KyHieu" class="control-label">Ký hiệu</label>
                    <input asp-for="KyHieu" class="form-control" />
                    <span asp-validation-for="KyHieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MoTa" class="control-label">Mô tả</label>
                    <textarea asp-for="MoTa" class="form-control"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-2">
                <input type="submit" value=" Tạo " class="btn-gradient-primary btn-rounded btn-sm btn">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&lt; Trở lại</a>
</div>

