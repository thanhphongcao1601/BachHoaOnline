                @Html.DisplayFor(modelItem => item.IddonHangNavigation.IddonHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdsanPhamNavigation.IdsanPham)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdctdonHang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdctdonHang">Details</a> |
