@model PTHShopping.Models.Sanpham_Danhmuc;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="col-lg-3 col-md-5">
    <div class="sidebar">
        <div class="sidebar__item">
            <div class="latest-product__text">
                <h4>Sản phẩm mới</h4>
                <div class="latest-product__slider owl-carousel">
                    <div class="latest-prdouct__slider__item">
                        @{
                            //var sortls = Model.ListSanpham.ToList().Where(x => x.CatId.ToString() == "cat002");
                            var sortls = Model.ListSanpham;
                        }
                        @foreach (var item in sortls)
                        {
                            int index = sortls.ToList().IndexOf(item);
                            int count = sortls.ToList().Count;
                            <a href="@Url.Action("Index", "ChiTietSP",new { id = index})" class="latest-product__item">
                                <div class="latest-product__item__pic">
                                    <img style="max-width:100px" src="/@item.Thumb" alt=""> @*thumb*@
                                </div>
                                <div class="latest-product__item__text">
                                    <h6>@item.TenSanPham</h6>
                                    <span>@item.Gia VND</span>
                                    <div class="pgiamgia">New</div>
                                </div>
                            </a>
                            if (index % 3 == 2 && index != count - 1)
                            {
                            @:</div>
                            @: <div class="latest-prdouct__slider__item">
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="sidebar__item">
            <h4>Bộ lọc tìm kiếm</h4>
            <ul>
                <li><label><input type="checkbox" value=""> Đang khuyến mãi</label></li>
                <li><label><input type="checkbox" value=""> Mới nhất</label></li>
                <li><label><input type="checkbox" value=""> Mua nhiều nhất</label></li>
            </ul>
        </div>
        <div class="sidebar__item">
            <h4>Giá</h4>
            <div class="price-range-wrap">
                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                     data-min="1000" data-max="1000000">
                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                </div>
                <div class="range-slider">
                    <div class="price-input">
                        <input type="text" id="minamount">
                        <input type="text" id="maxamount">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>